{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "themes.compiled.schema.json",
  "title": "Themes Compiled Schema",
  "description": "Schema for UI-ready compiled themes data",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Theme identifier (PascalCase)"
      },
      "color": {
        "type": "string",
        "description": "Hex color for theme display"
      },
      "description": {
        "type": "string"
      }
    },
    "required": ["id", "color"],
    "additionalProperties": false
  }
}
