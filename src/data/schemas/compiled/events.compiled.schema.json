{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "events.compiled.schema.json",
  "title": "Events Compiled Schema",
  "description": "Schema for UI-ready compiled events data",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "common.compiled.schema.json#/definitions/id"
      },
      "type": {
        "type": "string",
        "const": "event"
      },
      "name": {
        "type": "string"
      },
      "startYear": {
        "type": "integer",
        "description": "Event start year (BC as positive integer)"
      },
      "endYear": {
        "type": "integer",
        "description": "Event end year (BC as positive integer)"
      },
      "certainty": {
        "type": "string",
        "enum": ["exact", "approximate", "estimated"]
      },
      "categories": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Categories for this event"
      },
      "themes": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Explicit theme tags"
      },
      "kingdom": {
        "type": "string",
        "enum": ["Israel", "Judah"],
        "description": "Kingdom assignment for divided monarchy era"
      },
      "swimlane": {
        "type": "integer",
        "description": "Assigned swimlane for timeline display"
      },
      "priority": {
        "$ref": "common.compiled.schema.json#/definitions/priority"
      },
      "description": {
        "type": "string"
      },
      "scriptureRefs": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "source": {
        "type": "string"
      }
    },
    "required": ["id", "type", "name", "startYear", "certainty", "categories"],
    "additionalProperties": false
  }
}
