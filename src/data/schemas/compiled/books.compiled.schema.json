{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "books.compiled.schema.json",
  "title": "Books Compiled Schema",
  "description": "Schema for UI-ready compiled books data",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "common.compiled.schema.json#/definitions/id"
      },
      "type": {
        "type": "string",
        "const": "book"
      },
      "name": {
        "type": "string"
      },
      "startYear": {
        "type": "integer",
        "description": "Book start year (BC as positive integer)"
      },
      "endYear": {
        "type": "integer",
        "description": "Book end year (BC as positive integer)"
      },
      "certainty": {
        "type": "string",
        "enum": ["exact", "approximate", "estimated"]
      },
      "categories": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Categories for this book"
      },
      "themes": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Explicit theme tags"
      },
      "swimlane": {
        "type": "integer",
        "description": "Assigned swimlane for timeline display"
      },
      "priority": {
        "$ref": "common.compiled.schema.json#/definitions/priority"
      },
      "author": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "sources": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "required": ["id", "type", "name", "startYear", "endYear", "certainty", "categories"],
    "additionalProperties": false
  }
}
