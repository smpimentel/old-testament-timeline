{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "periods.raw.schema.json",
  "title": "Periods Raw Schema",
  "description": "Schema for raw periods data as authored",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "common.raw.schema.json#/definitions/id"
      },
      "name": {
        "type": "string"
      },
      "startYear": {
        "type": "integer",
        "minimum": 1
      },
      "endYear": {
        "type": "integer",
        "minimum": 1
      },
      "era": {
        "$ref": "common.raw.schema.json#/definitions/era"
      },
      "color": {
        "$ref": "common.raw.schema.json#/definitions/hexColor"
      },
      "description": {
        "type": "string"
      }
    },
    "required": ["id", "name", "startYear", "endYear", "era", "color"],
    "additionalProperties": false
  }
}
